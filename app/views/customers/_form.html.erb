<%= form_for(customer) do |f| %>
  <% if customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="col-sm-12">
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-6">

    <div class="form-group">
      <%= f.label :cpf %>
      <%= f.text_field :cpf, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :phone1 %>
      <%= f.text_field :phone1, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :address %>
      <%= f.text_field :address, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :neighborhood %>
      <%= f.text_field :neighborhood, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :city %>
      <%= f.text_field :city, :class => "form-control" %>
    </div>

  </div>

  <div class="col-sm-6">

    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :phone2 %>
      <%= f.text_field :phone2, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :number %>
      <%= f.text_field :number, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :cep %>
      <%= f.text_field :cep, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :state %>
      <%= f.text_field :state, :class => "form-control" %>
    </div>

  </div>

</div>

<div class="row">
  <div class="col-sm-12">
    <div class="form-group">
        <%= f.label :observation %>
        <%= f.text_area :observation, :class => "form-control" %>
    </div>
  </div>
</div>

  <div class="form-group last-form-item">
      <%= f.submit "Salvar", :class => "btn btn-success" %>
  </div>
<% end %>
